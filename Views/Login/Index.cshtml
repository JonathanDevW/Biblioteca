
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>Inicio de Sesión</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
	<link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" type="text/css" href="~/css/Login-Registro.css">
</head>

<body class="my-login-page text-secondary">
	<section>
		<div class="container">
			<div class="row justify-content-md-center">
				<div class="card-wrapper">
					<div class="d-flex justify-content-center align-items-center text-secondary  mb-3">
						<h3><i class="fas fa-solid fa-book"></i> Lectorium</h3>
					</div>
					<hr class="mt-2 mb-1">

					<div class="card text-secondary">
						<div class="card-body">
							<form id="loginform" method="post">


								<div class="form-group">
									<label class="text-secondary">Usuario</label>
									<input id="usuario" type="text" class="form-control" name="usuario" value="" required autofocus>
									<div class="invalid-feedback">
										User is invalid
									</div>
								</div>

								<div class="form-group">
									<label class="text-secondary">Contraseña</label>
									<input id="password" type="password" class="form-control" name="password" required data-eye>
									<div class="invalid-feedback">
										La contraseña es obligatoria
									</div>
								</div>

								<div class="form-group">
									<div class="custom-checkbox custom-control">
										<input type="checkbox" name="remember" id="remember" class="custom-control-input">
										<label for="remember" class="custom-control-label text-secondary">Recordarme</label>
									</div>
								</div>

								<div class="form-group m-0">
									<button type="submit" class="btn btn-primary btn-block">Iniciar Sesión</button>
								</div>
								<label id="pasword" for="password" class="mt-3">
									<a asp-controller="Login" asp-action="Recuperacion">¿Olvidas de tu contraseña?</a>
								</label>
								<hr></hr>
								<div id="result"></div>

								<div class="mt-4 text-center">
									No tienes una cuenta? <a asp-controller="Login" asp-action="Registro">Registrarme</a>
								</div>
							</form>
						</div>
					</div>
					<div class="footer">
						<p>Copyright &copy; 2024; Raquel Cuellar & Jonathan López</p>
					</div>
				</div>
			</div>
		</div>

	</section>

	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
	<script src="~/js/script.js"></script>
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<script src="~/js/ajaxLogin.js" asp-append-version="true"></script>

</body>
</html>



@{
    ViewData["Title"] = "Lector";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Usuarios</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="index">Home</a></li>
                    <li class="breadcrumb-item active">Usuario</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Tabla Usuario -->
<section class="content">
    <div class="card">
        <div class="card-header bg-primary">
            <h3 class="card-title">Agregar Persona&nbsp&nbsp</h3><a data-toggle="modal" data-target="#AddReaderModal" role="button"><i class="fas fa-plus-circle"></i></a>
        </div>
        <div class="card-body row">
            <div class="table-responsive px-2">
                <div class="row justify-content-center align-items-center minh=100">@Html.Raw(@ViewBag.msg)</div>
                <table id="tbl" class="table-bordered table-striped table-sm" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Primer nombre</th>

                            <th>Codigo</th>
                            <th>Carrera</th>
                            <th>Facultad</th>
                            <th>Usuario</th>
                            <th>Email</th>
                            <th>Estado</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @while (ViewBag.query.Read())
                        {
                            <tr>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("primer_nombre")) @ViewBag.query.GetValue(ViewBag.query.GetOrdinal("segundo_nombre")) @ViewBag.query.GetValue(ViewBag.query.GetOrdinal("primer_apellido")) @ViewBag.query.GetValue(ViewBag.query.GetOrdinal("segundo_apellido"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("codigo"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("nombre_carrera"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("nombre_facultad"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("nickname"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("correo"))</td>
                                <td>@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("estado"))</td>
                                <td style="text-align:center"><a class="btn btn-outline-primary btn-xs" data-toggle="modal" data-target="#ModUsuario" role="button" onclick="$('#m_id_persona').val(@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("id_persona"))); cargarDetalleUsuario(@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("id_persona")));" data-placement="top" title="Modificar datos" style="width:25px"><i class="fas fa-pen"></i></a></td>
                                <td style="text-align:center"><a class="btn btn-outline-primary btn-xs" data-toggle="modal" data-target="#RestContrasena" role="button" onclick="$('#id_usuario_r').val(@ViewBag.query.GetValue(ViewBag.query.GetOrdinal("id_persona")))" data-placement="top" title="Reiniciar contraseña" style="width:25px"><i class="fas fa-lock"></i></a></td>

                            </tr>
                        }
                    </tbody>
                </table>
                @{
                    ViewBag.query.Close();
                }
            </div>
        </div>
    </div>
</section>




@section Scripts {
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/plugins/jszip/jszip.min.js"></script>
    <script src="~/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="~/js/dataTable.js"></script>

    <script>

        function cargarDetalleUsuario(id_usuario) {
            // Hacer una llamada AJAX para obtener los detalles del usuario
            $.ajax({
                url: '@Url.Action("ObtenerUser", "Mantenimiento")',
                type: 'GET',
                data: { tabla: 'usuario', id: id_usuario },
                success: function (data) {
                    // Rellenar los campos del modal con los datos del usuario
                    $('#m_usuario').val(data.nickname);
                    $('#m_nombre').val(data.nombre);
                    $('#m_email').val(data.correo);
                    $('#m_rol').val(data.id_rol);
                    $('#m_estado').val(data.id_estado);
                },
                error: function (xhr, status, error) {
                    console.error(xhr.responseText);
                }

            });
        }

    </script>
}

